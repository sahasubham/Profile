<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Profile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">#B4FFFFFF</item>
        <item name="tabSelectedTextColor">#FDF6FE</item>
        <item name="tabIndicatorColor">#B4F30707</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#9ddbb4</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#43b976</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#aeaeae</item>
    </style>
</resources>